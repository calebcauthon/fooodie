<header class="intro-header" style="background-image: url('assets/images/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Recipes</h1>
                    <hr class="small">
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          {{#each model as |recipe|}}
            <h1>
              {{#link-to 'recipe.view' recipe}}
                {{recipe.title}}
              {{/link-to}}

              {{#if session.isAuthenticated}}
                  {{#link-to 'recipe.remove' recipe class='small-text'}} delete {{/link-to}}
                  {{#link-to 'recipe.edit' recipe class='small-text'}} edit {{/link-to}}
              {{/if}}
            </h1>
          {{/each}}  
        </div>
    </div>
</div>
