<header class="intro-header" style="background-image: url('assets/images/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>Are you sure you want to delete this recipe?</h1>
                    <button {{action "removeRecipe" on="click" }} class="btn btn-default">Yes, I'm sure</button>
                    {{#link-to 'recipes'}}
                        <button class="btn btn-default">No</button>
                    {{/link-to}}
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <h2>{{model.title}}</h2>
        </div>
    </div>
</div>

