<header class="intro-header" style="background-image: url('assets/images/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Fooodie</h1>
                    <hr class="small">
                    <span class="subheading">A Blog for Extreme Foodies</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          {{#each sortedModel as |post|}}
            {{#blog-post post=post}}
              {{post.body}}
            {{/blog-post}}
          {{/each}}  
        </div>
    </div>
</div>
